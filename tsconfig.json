{
    "extends": "@tsconfig/node18/tsconfig.json",
    "include": [
        "src/*.ts",
        "src/__tests__/test.ts",
        "dist/pomelo.config.ts",
        "src/**/*.ts",
    ],
    "compilerOptions": {
        "composite": true,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node"],
        "allowImportingTsExtensions": true,
        "noEmit": true
    }
}
